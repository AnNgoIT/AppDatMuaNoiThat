<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/profile"
    tools:context=".Activity.Fragment.UserProfileFragment">

    <!-- Header bar -->

    <RelativeLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/header_bar">

        <TextView
            android:id="@+id/tvpro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="146dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="139dp"
            android:gravity="center_horizontal|top"
            android:text="Profile"
            android:textColor="#303030"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/logout"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="44dp"
            android:src="@drawable/logout" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/userimg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="106dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/userimg" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="126dp"
        android:gravity="top"
        android:hint="Username"
        android:textColor="#303030"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="160dp"
        android:hint="username@gmail.com"
        android:textSize="14sp"
        android:gravity="top"
        android:lineSpacingExtra="-4sp" />

    <RelativeLayout
        android:id="@+id/myorder"
        android:layout_width="335dp"
        android:layout_height="80dp"
        android:background="@drawable/select_layout_profile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        >

        <TextView
            android:id="@+id/tv_myorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:textColor="#242424"
            android:layout_marginStart="22dp"
            android:layout_marginTop="19dp"
            android:text="My oders" />

        <TextView
            android:id="@+id/tv_myorder_note1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="45dp"
            android:hint="count order" />

        <ImageView
            android:id="@+id/img_myorder_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="21dp"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ship"
        android:layout_width="335dp"
        android:layout_height="80dp"
        android:background="@drawable/select_layout_profile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp">
        <TextView
            android:id="@+id/tv_ship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:textColor="#242424"
            android:layout_marginStart="22dp"
            android:layout_marginTop="19dp"
            android:text="Shipping Address" />

        <TextView
            android:id="@+id/tv_myorder_note2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="45dp"
            android:hint="count shipping address" />

        <ImageView
            android:id="@+id/img_ship_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="21dp"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/payment"
        android:layout_width="335dp"
        android:layout_height="80dp"
        android:background="@drawable/select_layout_profile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="400dp"
        >
        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:textColor="#242424"
            android:layout_marginStart="22dp"
            android:layout_marginTop="19dp"
            android:text="Payment Method" />

        <TextView
            android:id="@+id/tv_payment_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="45dp"
            android:hint="payment method" />

        <ImageView
            android:id="@+id/img_payment_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="21dp"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/setting"
        android:layout_width="335dp"
        android:layout_height="80dp"
        android:background="@drawable/select_layout_profile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"
        >
        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:textColor="#242424"
            android:layout_marginStart="22dp"
            android:layout_marginTop="19dp"
            android:text="Setting" />

        <TextView
            android:id="@+id/tv_setting_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="45dp"
            android:hint="Topic" />

        <ImageView
            android:id="@+id/img_setting_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="21dp"
            android:src="@drawable/ic_next" />
    </RelativeLayout>



</FrameLayout>